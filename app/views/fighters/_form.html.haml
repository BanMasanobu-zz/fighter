= form_for @fighter do |f|
  - if @fighter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fighter.errors.count, "error")} prohibited this fighter from being saved:"
      %ul
        - @fighter.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :from
    = f.text_field :from
  .field
    = f.label :age
    = f.text_field :age
  .field
    = f.label :height
    = f.text_field :height
  .field
    = f.label :weight
    = f.text_field :weight
  .field
    = f.label :gym
    = f.text_field :gym
  .field
    = f.label :type
    = f.text_field :type
  .actions
    = f.submit 'Save'
